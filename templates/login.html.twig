{% extends 'base-anon.html.twig' %}

{% block body %}
    <style>
        body {
            padding-top: 32px;
        }
    </style>

    {% for message in app.flashes %}
        <div class="alert alert-success">
            {{ message }}
        </div>
    {% endfor %}

    <div class="text-center mb-4">
        <img alt="CryptoDash" class="mb-4" height="72" src="/assets/img/logo.png" width="72"/>
        <h1 class="h3 mb-3 font-weight-normal">CryptoDash</h1>
    </div>

    {{ form_start(form, { 'attr': { 'class': 'form-signin' }}) }}
    <div class="form-label-group">
        {{ form_widget(form._username) }}
        <label for="_username">Correo electrónico</label>
    </div>
    <div class="form-label-group">
        {{ form_widget(form._password) }}
        <label for="_password">Contraseña</label>
    </div>
    {{ form_widget(form.submit, { 'attr': { 'class': 'btn btn-lg btn-primary btn-block' }}) }}
    {{ form_end(form) }}

    <br />
    <div class="text-center mb-4 small">
        <a href="{{ path('reset_password') }}">No recuerdo mi contraseña</a>
        &nbsp;&nbsp;&nbsp;|&nbsp;&nbsp;&nbsp;
        <a href="{{ path('register') }}">No tengo una cuenta, quiero registrarme</a>
    </div>
{% endblock %}
