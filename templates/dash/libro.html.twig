{% extends 'base.html.twig' %}

{% block body %}
<div class="container-fluid">
<h2>{{ exchange }} - {{ par }}</h2>
<div class="row">

<div class="col">
    <h3>Compra</h3>
    <table class="table">
    <tr>
        <th>Cantidad</th>
        <th class="text-center">Total</th>
        <th class="text-right">Precio</th>
    </tr>
    {% for orden in libro.ordenesCompra|slice(0, 8) %}
